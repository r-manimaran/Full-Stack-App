{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "OrdersDbConnection": "Server=ordersdb;Database=OrdersDb;User=sa;Password=Your_password123;"
  },
  "Messaging": {
    "Provider": "masstransit",
    "RabbitMq": {
      "Host": "amqp://api.RabbitMQ:5672",
      "QueueName": "order-created-queue",
      "UserName": "guest",
      "Password": "guest"
    }
  },
  "ServiceDiscoveryConfiguration": {
    "ConsulConfiguration": {
      "Host": "localhost",
      "Port": 8500,
      "Scheme": "http"
    },
    "ServiceConfiguration": {
      "ServiceName": "orders-api",
      "Host": "localhost",
      "Port": 5002,
      "Scheme": "http"
    },
    "ProductApiConfiguration": {
      "BaseUrl": "http://localhost:5001"
    }
  }
}
